{
  "name": "trimps-mods",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "lint": "prettier --write . && eslint . --fix && sort-package-json",
    "setup": "yarn install && yarn build",
    "up": "yarn install && npm-check-updates -u && yarn upgrade && sort-package-json",
    "watch": "rollup -cw"
  },
  "prettier": {
    "quoteProps": "preserve",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": [
            "./tsconfig.json"
          ]
        },
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/strict",
          "standard-with-typescript",
          "prettier"
        ]
      }
    ],
    "root": true
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "cspell": "^6.31.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "glob": "^10.2.6",
    "npm-check-updates": "^16.10.12",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-delete": "^2.0.0",
    "sort-package-json": "^2.4.1",
    "typescript": "^5.0.4"
  },
  "cspell": {
    "version": "0.2",
    "useGitignore": true,
    "words": [
      "autotrimps",
      "Bubl√©",
      "crossorigin",
      "Darktheme",
      "esmodules",
      "Pumpkimp",
      "Trimpmas",
      "trimps"
    ],
    "ignorePaths": [
      ".git",
      ".vscode",
      ".vscode-insiders",
      "dist",
      "node_modules",
      "package-lock.json",
      "vscode-extension",
      "yarn.lock"
    ]
  }
}
